<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="822dp"
    android:background="@color/colorBackground"
    tools:context=".GunFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gun_screen" >

                <ImageView
                    android:id="@+id/buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="34dp"
                    app:srcCompat="@drawable/ic_backbutton"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/mapbutton"
                    android:layout_width="129dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="780dp"
                    android:gravity="center_horizontal|top"
                    android:text="Карта маршрута"
                    android:textColor="#606060"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/button_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="267dp"
                    app:srcCompat="@drawable/ic_buttonplay"
                    tools:ignore="ContentDescription"
                    />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>