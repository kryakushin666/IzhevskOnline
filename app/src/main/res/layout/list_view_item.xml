<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="387dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/ic_itemone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/user_name_text"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Park inn"
        android:textAppearance="@style/park_inn"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/mainfont"
        android:gravity="top"
        android:text="4.5"
        android:textColor="#464646"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:layout_constraintVertical_bias="0.2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="136dp"
        android:layout_height="92dp"
        app:cardCornerRadius="11dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_avatar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/main_box" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/rating0"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:visibility="invisible"
        android:backgroundTint="#C4C4C4"
        app:layout_constraintStart_toEndOf="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        android:background="@drawable/ic_one_rating" />

    <ImageView
        android:id="@+id/rating1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:srcCompat="@drawable/ic_one_rating" />

    <ImageView
        android:id="@+id/rating2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/rating1"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:srcCompat="@drawable/ic_one_rating" />

    <ImageView
        android:id="@+id/rating3"
        android:layout_width="18dp"
        android:visibility="invisible"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/rating2"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:srcCompat="@drawable/ic_one_rating" />
    <ImageView
        android:id="@+id/rating4"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="invisible"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/rating3"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:srcCompat="@drawable/ic_one_rating" />
    <ImageView
        android:id="@+id/rating5"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="invisible"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/rating4"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:srcCompat="@drawable/ic_one_rating" />


</androidx.constraintlayout.widget.ConstraintLayout>
