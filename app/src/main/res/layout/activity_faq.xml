<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:ignore="RelativeOverlap, HardcodedText">


    <TextView
        android:id="@+id/textsettings"
        android:layout_width="236dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/mainfont"
        android:gravity="center_horizontal|top"
        android:text="О нас"
        android:textColor="#313131"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/ic_backbutton"
        app:layout_constraintEnd_toStartOf="@+id/textsettings"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textsettings"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/version"
        android:layout_width="96dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="158dp"
        android:gravity="center_horizontal|top"
        android:text="ver. 1.0"
        android:textColor="#2B2C2D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextSwitcher
        android:id="@+id/withlove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|top"
        android:text="@string/withlove"
        android:textColor="#2B2C2D"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/tap2"
        app:layout_constraintStart_toEndOf="@+id/tap1"
        app:layout_constraintTop_toBottomOf="@+id/version" />

    <TextView
        android:id="@+id/tap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|top"
        android:text="из Ижевска"
        android:textColor="#2B2C2D"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/withlove"
        app:layout_constraintTop_toBottomOf="@+id/version" />

    <TextView
        android:id="@+id/tap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_horizontal|top"
        android:text="С"
        android:textColor="#2B2C2D"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/withlove"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/version" />

</androidx.constraintlayout.widget.ConstraintLayout>
